{
  "name": "wordpress",
  "sideEffects": true,
  "version": "1.0.0",
  "description": "custom wordpress setup",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.4",
    "browser-sync-webpack-plugin": "^2.3.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "scripts": {
    "dev": "webpack --watch --config webpack.dev.js",
    "prod": "webpack --config webpack.prod.js",
    "format": "prettier --write \"./wp-content/themes/dcbase/assets/src/js/*.{js,jsx}\"",
    "lint": "eslint \"./wp-content/themes/dcbase/assets/src/js/*.{js,jsx}\" --quiet",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/displaycoffee/wordpress.git"
  },
  "author": "displaycoffee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/displaycoffee/wordpress/issues"
  },
  "homepage": "https://github.com/displaycoffee/wordpress#readme",
  "lint-staged": {
    "./wp-content/themes/dcbase/assets/src/js/*.{js,jsx}": [
      "eslint --quiet",     
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}